<!--components/search/index.wxml-->

<view class="container">
  <view class="header">
    <view class="search-container">
      <image class='icon' src='./images/search.png'></image>
      <input value='{{inputValue}}' bind:confirm='onConfirm' placeholder-class='in-bar' placeholder="书籍名" class='bar' focus='true' />
      <image bind:tap='onDelete' class="cancel-img" src='./images/cancel.png'></image>
    </view>
    <view bind:tap='onCancel' class="cancel">取消</view>
  </view>
<!-- 历史搜索 -->
  <view wx:if="{{!searching}}">
    <view class="history">
      <view class="title">
          <view class="chunk"></view>
          <text>历史搜索</text>
      </view>
      <view class="tags">
          <block wx:for="{{historyWords}}" wx:key='index'>
            <v-tag bind:tapping='onConfirm' text="{{item}}"></v-tag>
          </block>
        </view>
    </view>
<!-- 热门搜索 -->
    <view class="history hot-search">
      <view class="title">
        <view class="chunk"></view>
        <text>热门搜索</text>
      </view>
      <view class="tags">
        <block wx:for='{{hotWords}}' wx:key='index'>
          <v-tag bind:tapping='onConfirm' text='{{item}}'></v-tag>
        </block>
      </view>
    </view>
  </view>

  <!-- 书籍 -->
  <view wx:else class="books-container">
    <block wx:for="{{dataArray}}" wx:key="{{item.id}}">
      <v-book book='{{item}}' class='book'></v-book>
    </block>
  </view>
</view>
